<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.sistema.siefcotacao" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_agrovale"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/label_activity_main" >
        </activity>
        <activity
            android:name=".SplashActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:theme="@style/FullscreenTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/label_activity_settings" >
        </activity>
        <activity
            android:name=".SettingsSystemActivity"
            android:label="@string/title_activity_settings_system" >
        </activity>
        <activity
            android:name=".SyncDataActivity"
            android:label="@string/title_activity_sync_data" >
        </activity>
        <activity
            android:name=".ConcFornecActivity"
            android:label="@string/title_activity_conc_fornec" >
        </activity>
        <activity
            android:name=".CotacaoProdutoActivity"
            android:label="@string/title_activity_cotacao_produto"
            android:screenOrientation="portrait"
            android:configChanges="orientation|keyboardHidden|screenSize">
        </activity>
    </application>

</manifest>
